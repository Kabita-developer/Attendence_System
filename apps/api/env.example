NODE_ENV=development
PORT=4000

# Frontend origin for CORS (Next.js dev server)
WEB_ORIGIN=http://localhost:3000

MONGODB_URI=mongodb://127.0.0.1:27017/attendance_system

# Used for signing JWT access tokens (sent in Authorization header)
JWT_ACCESS_SECRET=change-me-change-me
JWT_ACCESS_EXPIRES_IN=1d

# App timezone (used for "once per day" attendance + reports)
APP_TIMEZONE=Asia/Kolkata

# Admin bootstrap (seed)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Admin@12345

# Admin bootstrap signup (one-time). Recommended to set this in production and keep secret.
ADMIN_SETUP_KEY=change-me-change-me


